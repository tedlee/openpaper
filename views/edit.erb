<% if @paper %>
	<form action="/addpaper/<%= @paper.slug %>" method="post" id="edit">
		<input type="hidden" name="_method" value="put">
		<input type="text" name="title" value="<%= @paper.title %>"/>
		<input type="text" name="author" value="<%= @paper.author %>"/>
		<input type="text" name="school" value="<%= @paper.school %>"/>
		<input type="text" name="source" value="<%= @paper.source %>"/>
		<input type="submit" value="Submit Changes">
	</form>
	<p><a href="/<%= @paper.slug %>/delete">Delete</a></p>
<% else %>  
	<p>Paper not found.</p>
<% end %> 
